<?xml version="1.0" encoding="utf-8"?>
<com.xinzy.qsbk.logic.content.view.DetailItemView xmlns:android="http://schemas.android.com/apk/res/android"
                                                  xmlns:fresco="http://schemas.android.com/apk/res-auto"
                                                  xmlns:tools="http://schemas.android.com/tools"
                                                  android:layout_width="match_parent"
                                                  android:layout_height="match_parent"
                                                  android:background="@drawable/simple_bg"
                                                  android:orientation="horizontal"
                                                  android:padding="16dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/detail_avatar_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        fresco:failureImage="@drawable/default_avatar"
        fresco:placeholderImage="@drawable/default_avatar"
        fresco:roundAsCircle="true"
        fresco:roundedCornerRadius="180dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/detail_username_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#535559"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="用户名"/>

            <TextView
                android:id="@+id/detail_floor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:drawableEnd="@drawable/ic_more"
                android:drawablePadding="4dp"
                android:textColor="#CFCFCF"
                android:textSize="12sp"
                tools:text="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/detail_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#636251"
            android:textSize="14sp"
            tools:text="内容啦啦啦啦啦"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#CFCFCF"
                android:textSize="12sp"
                tools:text="02-12"/>

            <TextView
                android:id="@+id/detail_praise_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_praise_sel"
                android:drawablePadding="8dp"
                android:textColor="#CFCFCF"
                android:textSize="12sp"
                tools:text="1"/>

        </LinearLayout>
    </LinearLayout>

</com.xinzy.qsbk.logic.content.view.DetailItemView>